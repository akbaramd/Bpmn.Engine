@model List<string>

<div class="card card-body mb-3">
    <form method="post" enctype="multipart/form-data" asp-action="Upload">
        <div class="form-group">
            <label for="file">Choose file to upload</label>
            <input type="file" name="file" class="form-control-file" id="file"/>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</div>

<div class="card card-body">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>File Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i]</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="Bpmn" style="display:inline;">
                            <input type="hidden" name="fileName" value="@Model[i]"/>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a asp-action="Diagram" asp-controller="Bpmn" asp-route-fileName="@Model[i]" class="btn btn-secondary">Diagram</a>
                        <a asp-action="Execute" asp-controller="Bpmn" asp-route-fileName="@Model[i]" class="btn btn-secondary">Execute</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No files uploaded yet.</p>
    }

</div>